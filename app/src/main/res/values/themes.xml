<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.F9Mobile" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="android:windowLightStatusBar" tools:ignore="NewApi">@android:color/black</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:fontFamily">@font/outfit_medium</item>

    </style>

    <style name="mainColor">
        <item name="android:textColor">@color/black_text_color_100</item>
        <item name="lottie_colorFilter">@color/black_text_color_100</item>
        <item name="android:tint">@color/black_text_color_100</item>
    </style>

    <style name="whiteBtn">
        <item name="android:textColor">@color/black_text_color_100</item>
        <item name="android:background">@drawable/ripple_white_btn</item>
    </style>

    <style name="clearFilterBtn">
        <item name="android:textColor">@color/black_text_color_100</item>
        <item name="android:background">@drawable/ripple_white_btn</item>
    </style>

    <style name="blackBtn">
        <item name="android:textColor">@color/white_text_color_100</item>
        <item name="android:background">@drawable/ripple_black_btn</item>
        <item name="drawableTint">@color/white_text_color_100</item>
    </style>

    <style name="loginInputStyle">
        <item name="android:textColor">@color/black_text_color_100</item>
        <item name="android:background">@color/white</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="hintTextColor">@color/black</item>
    </style>

    <style name="inputColor">
        <item name="android:textColor">@color/black_text_color_100</item>
        <item name="android:background">@drawable/rectangle_search_and_filter_day</item>
    </style>

    <style name="cardBackground">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="cardItemColor">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

</resources>